<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.image_url %>);">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="container">
  <div class="cards py-3">
    <% @garden.plants.each do |plant| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= plant.image_url %>)">

        <%= link_to 'X', plant_path(plant), data: {turbo_method: :delete, turbo_confirm: "T'es sÃ»r ?"}, class: "delete_btn" %>

        <%= plant.name %>
      </div>
    <% end %> 
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-4 mx-auto my-3">
      <%= simple_form_for [@garden, @plant] do |f| %>
        <%= f.input :name %>
        <%= f.input :image_url %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>

  <div class="d-flex justify-content-center align-items-center my-3">
    <%= link_to "Edit this garden", edit_garden_path(@garden), class: "btn btn-success text-white" %> |
    <%= link_to "Back to gardens", gardens_path, class: "btn btn-success text-white" %>
  </div>
</div>





